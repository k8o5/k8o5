    const PYTHONIZER_MAX_ITERATIONS = 10;
    const DEFAULT_BG_COLOR = '#008080';
    const PRESET_BG_COLORS = ['#008080', '#000000', '#808080', '#0000A0', '#3A6EA5', '#D3D3D3'];

